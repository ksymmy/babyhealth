<view class="page">
  <form onSubmit="onSubmit" onReset="onReset">
    <view hidden="true">
      <input name="id" value="{{orgInfo.id}}" class="input"/>
    </view>
    <view class="row">
      <view class="dll-title">
        <text class="redColor">*</text>统一社会信用代码</view>
      <input style="flex-basis: 50%;" disabled="{{isDisabled}}" class="input" name="creditCode" value="{{orgInfo.creditCode}}" class="input" placeholder="请输入统一社会信用代码" />
    </view>
    <view class="row">
      <view class="dll-title">
        <text class="redColor">*</text>单位名称</view>
      <input style="flex-basis: 70%;" disabled="{{isDisabled}}" name="corpName" value="{{orgInfo.corpName}}" class="input" placeholder="请输入单位名称" />
    </view>
    <picker disabled="{{isDisabled}}" onChange="bindJglxPickerChange" value="{{jglxIndex}}" range="{{jglxArray}}" range-key="name">
      <view class="row">
        <view class="dll-title">
          <text class="redColor">*</text>机构类型</view>
        <view hidden="true">
          <input name="orgType" value="{{jglxArray[jglxIndex].id}}" class="input"/>
          <input name="orgTypeName" value="{{jglxArray[jglxIndex].name}}" class="input"/>
        </view>
        <view>{{jglxArray[jglxIndex].name}}</view>
        <image class="dll-arrow" src="/image/arrowright.png" mode="aspectFill" />
      </view>
    </picker>
    <picker disabled="{{isDisabled}}" onChange="bindSshyPickerChange" value="{{sshyIndex}}" range="{{sshyArray}}" range-key="name">
      <view class="row">
        <view class="dll-title">
          <text class="redColor">*</text>所属行业</view>
        <view hidden="true">
          <input name="industry" value="{{sshyArray[sshyIndex].id}}" class="input"/>
          <input name="industryName" value="{{sshyArray[sshyIndex].name}}" class="input"/>
        </view>
        <view>{{sshyArray[sshyIndex].name}}</view>
        <image class="dll-arrow" src="/image/arrowright.png" mode="aspectFill" />
      </view>
    </picker>
